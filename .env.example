# MongoDB Atlas connection string, e.g.:
# mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
# (This app selects the database via MONGODB_DB below.)
MONGODB_URI=
MONGODB_DB=babyhandoff

# Optional (not required for DB driver connectivity; used only if you later call Atlas Admin APIs)
ATLAS_PROJECT_ID=

# App
APP_ENV=dev
APP_BASE_URL=http://127.0.0.1:8000

# Orchestration
AGENT_TIMEOUT_SECONDS=25
AGENT_MAX_RETRIES=2
CONTEXT_PACK_TOKEN_BUDGET=4000

# Demo
DEMO_MODE=true

# Council / LLM (optional)
COUNCIL_MODE=heuristic  # heuristic | openai | multi
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5.2
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro
